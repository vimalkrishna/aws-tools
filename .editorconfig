# to ensure different editors (VS Code, PyCharm, IntelliJ, etc.) automatically align with the same LF rules and indentation styles
# EditorConfig helps maintain consistent coding styles across editors and IDEs
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python (CDK, Lambda code)
[*.py]
indent_style = space
indent_size = 4

# JSON/YAML (CI/CD configs, pipeline definitions)
[*.json]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

# Markdown & docs
[*.md]
trim_trailing_whitespace = false  # allow intentional spacing in lists

# Windows batch scripts
[*.bat]
end_of_line = crlf

[*.cmd]
end_of_line = crlf
